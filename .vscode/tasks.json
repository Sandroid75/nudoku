{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build active project",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-std=gnu17",
				"-Wall",
				"-O0",
				"-ggdb",
				"-DVERSION='\"0.3\"'",
				"${workspaceFolder}/src/main.c",
				"${workspaceFolder}/src/sudoku.c",
				"-o",
				"${workspaceFolder}/nudoku",
				"-lncursesw"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}